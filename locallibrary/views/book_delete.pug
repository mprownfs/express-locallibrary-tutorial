extends layout

block content
  h1 #{title}: #{book.title}
  
  
  if bookinstances.length
  
    p #[strong Delete the following booksinstances before attempting to delete this book.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 BookInstances
    
      dl
      each bookinstance in bookinstances
        dt 
          a(href=bookinstance.url) #{bookinstance.id}
        dd #{bookinstance.imprint}

  else
    p Do you really want to delete this book?
    
    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden',name='nookid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete